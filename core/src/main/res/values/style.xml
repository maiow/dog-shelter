<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Title">
        <item name="android:fontFamily">@font/centurygothic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="SubTitle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="GreenButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:background">@drawable/green_gradient</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/centurygothic</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="android:elevation">30dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="WhiteButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:background">@drawable/green_outlined_btn</item>
        <item name="android:textColor">@color/green_solid</item>
        <item name="fontFamily">@font/centurygothic</item>
        <item name="android:textSize">20sp</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="android:elevation">30dp</item>
        <item name="android:translationZ">2dp</item>

    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="FilterTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FilterSlider" parent="Widget.Material3.Slider">
        <item name="android:stepSize">1</item>
        <item name="android:valueFrom">0</item>
        <item name="android:valueTo">12</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="thumbColor">@color/grey_main</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="haloColor">@color/grey_inactive</item>
        <item name="tickVisible">false</item>
        <item name="trackColorInactive">@color/grey_inactive</item>
        <item name="trackColorActive">@color/grey_main</item>
        <item name="labelStyle">@style/FilterSliderLabel</item>
    </style>

    <style name="FilterSliderLabel" parent="Widget.Material3.Slider.Label">
        <item name="backgroundTint">@color/grey_main</item>
    </style>
</resources>