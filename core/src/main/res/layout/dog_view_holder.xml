<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dog_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dogPhoto"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/dog_card"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/dogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="7dp"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/selector_dogview_gender"
            tools:text="TextView" />

        <TextView
            android:id="@+id/dogHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sf_ui_text_regular"
            android:textColor="@color/grey_main_80_opacity"
            android:textSize="14sp"
            tools:text="Height" />

        <TextView
            android:id="@+id/dogAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/sf_ui_text_regular"
            android:textColor="@color/grey_main_80_opacity"
            android:textSize="14sp"
            tools:text="TextView" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="15dp"
        android:paddingVertical="16dp"
        app:srcCompat="@drawable/selector_favorites"
        tools:ignore="ContentDescription" />
</com.google.android.material.card.MaterialCardView>