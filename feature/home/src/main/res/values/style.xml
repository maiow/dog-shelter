<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightGreenButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:background">@drawable/lightgreen_button</item>
        <item name="android:textColor">@color/green_solid</item>
        <item name="fontFamily">@font/centurygothic</item>
        <item name="android:textSize">20sp</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="android:elevation">30dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="GreenOutlinedButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/green_solid</item>
        <item name="fontFamily">@font/centurygothic</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/green_solid</item>
        <item name="android:textSize">20sp</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="FilterTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FilterSlider" parent="Widget.Material3.Slider">
        <item name="android:stepSize">1</item>
        <item name="android:valueFrom">0</item>
        <item name="android:valueTo">12</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="thumbColor">@color/grey_main</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tickVisible">false</item>
        <item name="trackColorInactive">@color/grey_inactive</item>
        <item name="trackColorActive">@color/grey_main</item>
        <item name="labelStyle">@style/FilterSliderLabel</item>
    </style>

    <style name="FilterSliderLabel" parent="Widget.Material3.Slider.Label">
        <item name="backgroundTint">@color/grey_main</item>
    </style>

    <style name="Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipIconTint">@drawable/chip_bg</item>
        <item name="chipIconSize">15dp</item>
        <item name="chipIconVisible">true</item>
        <item name="android:textColor">@drawable/chip_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_main</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipStrokeColor">@drawable/chip_bg</item>
    </style>

    <style name="Checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <!--item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/grey_main</item>
        <item name="strokeWidth">1dp</item>
        <item name="buttonTint">@color/grey_main</item>
        <item name="buttonIconTint">@drawable/ic_checked</item-->

    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="AppImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemContainerTitle" parent="FilterTitle">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>