    <fragment
        android:id="@+id/homeFragment"
        android:name="com.redpine.home.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <action
            android:id="@+id/action_homeFragment_to_petsCardFragment"
            app:destination="@id/petsCardFragment" />
        <action
            android:id="@+id/action_homeFragment_to_dogsFoundFragment"
            app:destination="@id/dogsFoundFragment" />
        <action
            android:id="@+id/action_homeFragment_to_newsListFragment"
            app:destination="@id/newsListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_singleNewsFragment"
            app:destination="@id/singleNewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.redpine.home.presentation.filter.FilterFragment"
        android:label="FilterFragment">
        <action
            android:id="@+id/action_filterFragment_to_dogsFoundFragment"
            app:destination="@id/dogsFoundFragment" />
    </fragment>
    <fragment
        android:id="@+id/dogsFoundFragment"
        android:name="com.redpine.home.presentation.found.DogsFoundFragment"
        android:label="fragment_dogs_found"
        tools:layout="@layout/fragment_dogs_found">
        <argument
            android:name="filters"
            android:defaultValue="Девочка"
            app:argType="string" />
        <action
            android:id="@+id/action_dogsFoundFragment_to_petsCardFragment"
            app:destination="@id/petsCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/petsCardFragment"
        android:name="com.redpine.home.presentation.pets_card.PetsCardFragment"
        android:label="fragment_pets_card"
        tools:layout="@layout/fragment_pets_card">
        <argument
            android:name="dogId"
            android:defaultValue="1"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/newsListFragment"
        android:name="com.redpine.home.presentation.news.NewsListFragment"
        android:label="fragment_news_list"
        tools:layout="@layout/fragment_news_list">
        <action
            android:id="@+id/action_newsListFragment_to_singleNewsFragment"
            app:destination="@id/singleNewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/singleNewsFragment"
        android:name="com.redpine.home.presentation.news.SingleNewsFragment"
        android:label="fragment_single_news"
        tools:layout="@layout/fragment_single_news">
        <argument
            android:name="newsId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.redpine.home.presentation.authorization.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/home_nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_authFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
        <action
            android:id="@+id/action_authFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.redpine.home.presentation.authorization.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration">
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/action_registrationFragment_to_authMessageFragment"
            app:destination="@id/authMessageFragment"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.redpine.home.presentation.authorization.resetpassword.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password">
        <action
            android:id="@+id/action_resetPasswordFragment_to_authMessageFragment"
            app:destination="@id/authMessageFragment"
            app:popUpTo="@id/resetPasswordFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authMessageFragment"
        android:name="com.redpine.home.presentation.authorization.message.AuthMessageFragment"
        android:label="fragment_auth_message"
        tools:layout="@layout/fragment_auth_message" />
    <fragment
        android:id="@+id/testFragment"
        android:name="com.redpine.home.presentation.filter.TestFragment"
        android:label="TestFragment" />
</navigation>